<style>
  #shopify-section-{{ section.id }} {
    height: {{ section.settings.spacer-height-mobile }}px;
    display: block;
  }
  @media(min-width: 666px) {
    #shopify-section-{{ section.id }} {
      height: {{ section.settings.spacer-height }}px;
    }
  }
</style>
{% schema %}
{
  "name": "Spacer",
  "tag": "section",
  "class": "section--spacer",
  "settings": [
    {
      "type": "range",
      "id": "spacer-height",
      "min": 5,
      "max": 300,
      "step": 5,
      "default": 30,
      "unit": "px",
      "label": "Desktop space - in px"
    },
    {
      "type": "range",
      "id": "spacer-height-mobile",
      "min": 5,
      "max": 150,
      "step": 5,
      "default": 20,
      "unit": "px",
      "label": "Mobile space - in px"
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}
